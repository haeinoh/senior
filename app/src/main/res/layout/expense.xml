<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="@color/colorWarning" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3/08/2018"
            android:layout_gravity="left"
            android:padding="3dp"
            android:textColor="#000000"
            android:id="@+id/expenseDateText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="expenseCategory"
            android:layout_gravity="right"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:id="@+id/expenseCategoryText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="expenseName"
            android:layout_gravity="left"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:id="@+id/expenseNameText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expenseAmount"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="#000000"
            android:id="@+id/expenseAmountText"/>

    </LinearLayout>

</LinearLayout>